        <script type="text/javascript">	

	$( init );
	
	function init() {
		$('.resident').draggable({
			containment: '#content',
			snap: '.day',
			revert: true
		});
		$('.day').droppable({
			drop: handleResidentDrop
		});
	}
	
	function handleResidentDrop(event, ui) {
		var resident = ui.draggable;
		var residentName = resident.text();
		var newDiv = $('<div></div>').addClass('assignedResident').append(residentName);
		var closeButton = $('<span></span>').addClass('closeButton');
		closeButton.append('x');
		newDiv.append(closeButton);
		$(this).append(newDiv);
		resident.remove();
		$(closeButton).click(function() {
			var replaceResident = $('<div></div>').addClass('resident').append(residentName);
			$('#namelist').append(replaceResident);
			newDiv.remove();
		});
	};


