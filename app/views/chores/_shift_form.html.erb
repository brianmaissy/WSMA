<%= form_for @shift do |f| %>
  <%= f.hidden_field :chore_id, :value=>chore.id %>
  <%= f.hidden_field :temporary, :value=>0 %>
  <%= f.label :day_of_week %>
  <%= f.select(:day_of_week, [['Sunday', 1],
                              ['Monday', 2],
                              ['Tuesday', 3],
                              ['Wednesday', 4],
                              ['Thursday', 5],
                              ['Friday', 6],
                              ['Saturday', 7]]) %><br />
  <%= f.label :time, "Start Time" %>
  <%= f.time_select :time %>



  <%= f.submit :class=>"button" %>
<% end %>
